# -------------------------
# Auth
# -------------------------
ADMIN_API_KEY=sk_admin_CHANGE_ME
SITE_API_KEYS=sk_site_crm_CHANGE_ME,sk_site_ai_CHANGE_ME
RATE_LIMIT=60/minute

# -------------------------
# Multitenancy / CORS
# -------------------------
TENANT_ORIGINS=https://crm.reachmagnets.com,https://ai.reachmagnets.com
TENANT_DOMAINS=reachmagnets.com

# -------------------------
# MySQL (container root)
# -------------------------
MYSQL_ROOT_PASSWORD=CHANGE_ME

# -------------------------
# SQL DSNs (per tenant)
# (URL-encode passwords if they contain + or /)
# -------------------------
DEFAULT_SQL_DSN=mysql+pymysql://core_user:CORE_DB_PASS@mysql:3306/core?charset=utf8mb4
TENANT_SQL_DSN=crm.reachmagnets.com=mysql+pymysql://crm_user:CRM_DB_PASS@mysql:3306/crm?charset=utf8mb4;ai.reachmagnets.com=mysql+pymysql://ai_user:AI_DB_PASS@mysql:3306/ai?charset=utf8mb4

# -------------------------
# Storage
# -------------------------
STORE=chroma
DATA_DIR=/app/data
CHROMA_DIR=/app/chroma

# -------------------------
# RAG / LLM
# -------------------------
OLLAMA_BASE=http://127.0.0.1:11434
OLLAMA_MODEL=llama3
EMBED_MODEL=nomic-embed-text

# -------------------------
# WordPress webhook (backend -> WP)
# -------------------------
WP_WEBHOOK_URL=https://crm.reachmagnets.com/wp-json/crm/v1/lead
WP_WEBHOOK_KEY=CHANGE_ME
