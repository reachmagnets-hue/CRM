[Unit]
Description=RAG Backend Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/rag-backend
EnvironmentFile=/opt/rag-backend/.env
ExecStart=/usr/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
